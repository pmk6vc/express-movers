{
  "name": "express-movers",
  "version": "1.0.0",
  "description": "Marketplace for movers",
  "main": "dist/index.js",
  "scripts": {
    "prettier:check": "prettier -c .",
    "prettier:fix": "prettier --write .",
    "lint": "npx eslint .",
    "test": "firebase emulators:exec --project gcp-test-project-id --log-verbosity SILENT --ui \"jest --detectOpenHandles --maxWorkers=1\"",
    "test:ci": "firebase emulators:exec --project gcp-test-project-id --log-verbosity SILENT \"jest --ci --verbose --no-cache --maxWorkers=1\"",
    "emulators:start": "firebase emulators:start --project gcp-test-project-id",
    "start:dev": "firebase emulators:exec --project gcp-test-project-id --ui \"nodemon src/index.ts\"",
    "start:docker": "docker-compose up --build",
    "prebuild": "npm run lint",
    "build": "tsc",
    "start": "node .",
    "migrations:generate": "drizzle-kit generate:pg",
    "migrations:drop": "drizzle-kit drop"
  },
  "pre-commit": [
    "prettier:check",
    "lint"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "axios": "^1.4.0",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "firebase-tools": "^12.5.2",
    "nodemon": "^3.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "^6.0.0",
    "@testcontainers/postgresql": "^10.1.0",
    "@types/pg": "^8.6.6",
    "drizzle-orm": "^0.28.5",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.1",
    "pg": "^8.11.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
