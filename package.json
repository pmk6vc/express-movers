{
  "name": "express-movers",
  "version": "1.0.0",
  "description": "Marketplace for movers",
  "main": "dist/index.js",
  "scripts": {
    "prettier:check": "prettier -c .",
    "prettier:fix": "prettier --write .",
    "lint": "npx eslint .",
    "test": "firebase emulators:exec --project gcp-test-project-id --only auth --ui \"jest --detectOpenHandles\"",
    "test:ci": "firebase emulators:exec --project gcp-test-project-id --only auth \"jest --ci --verbose --no-cache\"",
    "emulators:start": "firebase emulators:start --project gcp-test-project-id",
    "start:dev": "firebase emulators:exec --project gcp-test-project-id --ui \"nodemon src/index.ts\"",
    "start:docker": "docker-compose up --force-recreate",
    "prebuild": "npm run lint",
    "build": "tsc",
    "start": "node .",
    "migrations:generate": "drizzle-kit generate:pg",
    "migrations:drop": "drizzle-kit drop"
  },
  "pre-commit": [
    "prettier:check",
    "lint"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "axios": "^1.6.7",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "firebase-functions-test": "^3.1.1",
    "firebase-tools": "^13.3.0",
    "nodemon": "^3.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "^6.0.0",
    "@testcontainers/postgresql": "^10.7.1",
    "@types/pg": "^8.11.0",
    "drizzle-orm": "^0.29.3",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "pg": "^8.11.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
